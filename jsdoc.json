{
    "recurseDepth": 10,
    "source": {
        "include": ["."],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": ["plugins/markdown"],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true        
    },
    "opts": {
        "readme": "README.md",  
        "destination": "./jsdoc",
        "recurse": true
    }
}